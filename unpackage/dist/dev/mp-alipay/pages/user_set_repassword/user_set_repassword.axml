<view class="body"><input class="uni-input common_input" type="text" password="{{true}}" placeholder="输入旧密码" data-event-opts="{{[['input',[['__set_model',['','oldPwd','$event',[]]]]]]}}" value="{{oldPwd}}" onInput="__e"/><input class="uni-input common_input" type="text" password="{{true}}" placeholder="输入新密码" data-event-opts="{{[['input',[['__set_model',['','newPwd','$event',[]]]]]]}}" value="{{newPwd}}" onInput="__e"/><input class="uni-input common_input" type="text" password="{{true}}" placeholder="输入确认密码" data-event-opts="{{[['input',[['__set_model',['','reNewPwd','$event',[]]]]]]}}" value="{{reNewPwd}}" onInput="__e"/><button class="{{(('user_set_btn')+' '+((disabled)?'user_set_btn_disable':''))}}" type="primary" disabled="{{disabled}}" loading="{{loading}}" data-event-opts="{{[['tap',[['submit',['$event']]]]]}}" onTap="__e">完成</button></view>