.common_list {
  border: 1rpx solid red;
  padding: 20rpx;
}
.common_list .common_list_l {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.common_list .common_list_l image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 100%;
}
.common_list .common_list_r {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.common_list .common_list_r .content_img {
  width: 80%;
  border-radius: 20rpx;
}
.nav_left > view,
.nav_right > view {
  font-size: 40rpx;
}
.nav_left .iconqiandaoicon,
.nav_right .iconqiandaoicon {
  font-size: 20rpx;
  color: red;
}
.nav_left {
  margin: 0 0 0 16rpx;
  float: left;
  border: 1rpx solid red;
}
.nav_right {
  width: 100%;
}
.nav_tab_bar {
  width: 100%;
  margin: 0 0 0 -20rpx;
}
.nav_tab_bar > view {
  font-size: 32rpx;
  padding: 0 15rpx;
  font-weight: bold;
  color: #969696;
}
.nav_tab_bar .active {
  color: #333;
}
.nav_tab_bar .nav_tab_bar_line {
  border-bottom: 5rpx solid #fede33;
  border-top: 5rpx solid #fede33;
  width: 70rpx;
  border-radius: 20rpx;
  position: absolute;
  bottom: 12rpx;
}

