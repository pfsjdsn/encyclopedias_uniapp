.home_info {
  padding: 20rpx;
}
.home_info image {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  width: 100rpx;
  border-radius: 100rpx;
  margin: 0 15rpx 0 0;
}
.home_info > view:first-of-type {
  height: 100%;
}
.home_info > view:first-of-type > view:first-child {
  font-size: 32rpx;
}
.home_info > view:first-of-type > view:last-child {
  color: #bbb;
}
.home_list_hover {
  background: #f4f4f4;
}
.home_list {
  padding: 20rpx;
}
.home_list .home_list_item {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}
.home_list .home_list_item > view > view {
  margin: 0 10rpx 0 0;
}
.home_list .home_list_item > view:first-child {
  color: #333;
}
.home_list .home_list_item > view:last-child {
  color: #ccc;
  font-size: 40rpx;
}
.other_login {
  padding: 20rpx 80rpx;
}
.other_login > view > view {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  font-size: 55rpx;
  color: #fff;
}
.other_login .iconweixin {
  background: #2db19b;
}
.other_login .iconxinlangweibo {
  background: #2caefc;
}
.other_login .iconfenxiangqqhaoyou {
  background: #fc7729;
}
.home_data {
  padding: 20rpx 40rpx;
}
.home_data > view {
  color: #989898;
}
.home_data > view > view {
  font-size: 35rpx;
  color: #333;
}
.home_adv {
  padding: 20rpx;
}
.home_adv image {
  border-radius: 20rpx;
  height: 150rpx;
}

