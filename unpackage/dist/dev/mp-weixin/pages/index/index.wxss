.index_list {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.header_container .header_user_info {
  color: #999;
}
.header_container .header_user_info image {
  width: 85rpx;
  height: 85rpx;
  border-radius: 100%;
  margin: 0 10rpx 0 0;
}
.header_container .header_user_follow {
  background-color: #f5f2f5;
  border-radius: 5rpx;
  padding: 0 10rpx;
}
.title_container {
  padding: 15rpx;
  font-size: 32rpx;
}
.image_container {
  position: relative;
  padding: 15rpx;
  color: #fff;
}
.image_container image {
  width: 100%;
  border-radius: 20rpx;
}
.image_container .iconbofang {
  position: absolute;
  font-size: 140rpx;
}
.image_container .play_count {
  position: absolute;
  background: rgba(51, 51, 51, 0.72);
  bottom: 20rpx;
  right: 20rpx;
  border-radius: 40rpx;
  font-size: 25rpx;
  padding: 0 10rpx;
}
.info_container {
  padding: 15rpx 0;
  color: #999;
}
.info_container .info_left view,
.info_container .info_right view {
  margin: 0 10rpx;
}

